{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "NodeNext",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "moduleResolution": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true
  },
  "types": [
    "node"
  ],
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}